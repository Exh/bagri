    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>${project.name}-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/dev.xml</descriptor>
                                <!--descriptor>src/main/assembly/uat.xml</descriptor>
                                <descriptor>src/main/assembly/prod.xml</descriptor-->
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


    <profiles>
        <profile>
            <id>test</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <!-- Run XDM Cache server mvn -Drun-cache -->
                            <execution>
                                <id>run-cache</id>
                                <phase>test</phase>
                                <configuration>
                                    <tasks if="run-cache">
                                        <java fork="true" classname="com.bagri.xdm.cache.hazelcast.XDMCacheServer">
                                            <jvmarg line="${run.jvm.args}"/>
                                            <sysproperty key="LOGDIR" value="./logs/"/>
                                            <sysproperty key="com.sun.management.jmxremote" value="true"/>
                                            <sysproperty key="com.sun.management.jmxremote.authenticate" value="false"/>
                                            <sysproperty key="com.sun.management.jmxremote.ssl" value="false"/>
                                            <sysproperty key="logback.configurationFile" value="xdm-cache-logging.xml"/>
                                            <sysproperty key="xdm.cluster.node.name" value="first"/>
                                            <sysproperty key="xdm.cluster.node.schemas" value="TPoX"/>
                                            <classpath>
                                                <path refid="maven.compile.classpath"/>
                                                <path refid="maven.runtime.classpath"/>
                                                <pathelement location="config/"/>
                                            </classpath>
                                        </java>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
